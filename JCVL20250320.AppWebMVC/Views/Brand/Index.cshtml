@model IEnumerable<JCVL20250320.AppWebMVC.Models.Brand>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-black ">Marcas</h1>
<p>
    <a asp-action="Create" class="btn btn-success text-center text-white mt-3">Crear nueva marca</a>
</p>

<table class="table table-striped table-hover mt-5  " id="myTable">
    <thead class="table-dark text-white text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td class="text-center">
                    <a class="btn btn-outline-success " asp-action="Edit" asp-route-id="@item.BrandId">Editar</a>
                    <a class="btn btn-outline-info " asp-action="Details" asp-route-id="@item.BrandId"> Detalles</a>
                    <a class="btn btn-outline-danger " asp-action="Delete" asp-route-id="@item.BrandId">Eliminar </a>
                </td>
            </tr>
        }
    </tbody>
</table>



@section Scripts {
    <script>
                       $(document).ready(function() {
            $('#myTable').DataTable();
        });
    </script>
}

